{
  "extends": ["eslint-config-constellation"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "simple-import-sort/imports": [
      "error",
      {
        "groups": [
          ["^react", "^@?\\w"],
          [
            "^(blockchain-wallet-v4|blockchain-info-components|components|coins|core|data|layouts|providers|services|utils)(/.*|$)"
          ],
          ["^\\.", "^[^.]"]
        ]
      }
    ]
  }
}
